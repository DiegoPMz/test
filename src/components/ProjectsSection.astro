    height: 90%;

    position: absolute;
    z-index: -1;

    top: 0;
    left: 0;
    border-radius: 20px;

    background: linear-gradient(
      150deg,
      rgba(122, 122, 122, 0.452),
      transparent,
      transparent
    );

    background-color: rgba(0, 0, 0, 0.301);
  }

  .projects-card__description {
    display: flex;
    flex-direction: column;

    & .card__description-title {
      font-weight: 500;
      font-size: 20px;
      color: var(--txt-color-t);
    }
    & .card__description-txt {
      font-weight: 400;
      font-size: 15px;
      color: var(--txt-color-p);
    }
  }

  .projects-card__image-bgDecoration {
    width: 100%;
    aspect-ratio: 3/2;

    border-radius: 24px;
    animation: changeCardDecorationColor 20s linear infinite alternate-reverse;

    padding: 18px 0px 0px 18px;
    overflow: hidden;

    .projects-card__image-img {
      width: 110%;
      height: 110%;

      background-size: cover;
      background-repeat: no-repeat;
      background-position: left;
    }

    .projects-card__image-img--devLinks {
