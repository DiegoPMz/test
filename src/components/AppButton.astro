---
interface Props {
  type?: "button" | "a";
  link?: {
    href: string;
    target: string;
  };
  id?: string;
}

const { type = "button", link, id } = Astro.props;
---

{
  type === "button" ? (
    <button id={id} class="app-btn">
      <slot />
    </button>
  ) : (
    <a
      id={id}
      class="app-btn"
      href={link?.href ?? "#"}
      target={link?.target ?? "_blank"}
    >
      <slot />
    </a>
  )
}

<style>
  .app-btn {
    cursor: pointer;
    display: flex;
    gap: 0.5rem;
    border: none;

    transition: all 0.5s cubic-bezier(0.165, 0.84, 0.44, 1);
    border-radius: 100px;
    font-weight: 800;
    place-content: center;

    padding: 0.75rem 1rem;
    font-size: 0.825rem;
    line-height: 1rem;

    background-color: rgba(0, 0, 0, 0.4);
    box-shadow:
      inset 0 1px 0 0 rgba(255, 255, 255, 0.12),
      inset 0 0 0 1px rgba(255, 255, 255, 0.08);
    color: var(--txt-color-t);
    text-decoration: none;
  }

  .app-btn:hover {
    box-shadow:
      inset 0 1px 0 0 rgba(255, 255, 255, 0.08),
      inset 0 0 0 1px color-mix(in srgb, var(--color-lavender) 10%, transparent);
    transform: translate(0, -0.25rem);
    background-color: rgba(0, 0, 0, 0.5);
  }
</style>
